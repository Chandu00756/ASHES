# ASHES Environment Configuration Example
# Copy this file to .env and fill in your actual values

# API Keys (REQUIRED - Replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp

# Database Configuration
POSTGRES_DB=ashes
POSTGRES_USER=ashes
POSTGRES_PASSWORD=change_me_secure_password
DATABASE_URL=postgresql://ashes:change_me_secure_password@localhost:5432/ashes

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Neo4j Configuration
NEO4J_AUTH=neo4j/change_me_secure_password
NEO4J_URI=bolt://localhost:7687

# InfluxDB Configuration
INFLUXDB_ADMIN_TOKEN=change_me_secure_token
INFLUXDB_ORG=ashes
INFLUXDB_BUCKET=ashes-timeseries
INFLUXDB_URL=http://localhost:8086

# Security
JWT_SECRET_KEY=change_me_very_long_and_secure_jwt_secret_key
ENCRYPTION_KEY=change_me_encryption_key

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# Development Settings (Optional)
PYTHONPATH=/path/to/ashes/src
